<%- include('partials/layout'); %>
<main class="container">
  <div class="main-tableContainer addForm-container">
    <h5 class="table-heading">Edit Department</h5>
    <form class="addForm" action="/EditDept/<%= dept.id %> " method="post">
      <div class="form-row">
        <div class="input-wrapper">
          <input type="hidden" value="<%= dept.id %>" name="id" />
          <label for="deptName">Project Name:</label>
          <input
            type="text"
            name="deptname"
            placeholder="Department Name"
            value="<%= dept.deptname %>"
          />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="hod">Head of the Department:</label>
          <input type="text" name="hod" id="" value="<%= dept.hod %>" />
        </div>
      </div>

      <div class="form-row">
        <div class="input-wrapper">
          <label for="proj">Number of projects done under department:</label>
          <input type="number" name="proj" id="" value="<%= dept.proj %>" />
        </div>
        <div class="input-wrapper">
          <label for="description">Description of Department:</label>
          <input
            type="text"
            name="description"
            id=""
            value="<%= dept.description %>"
          />
        </div>
      </div>

      <div class="btn-row">
        <button type="submit" class="form-btn submitBtn">Submit</button>
        <a href="/AllDept"><button type="button" class="form-btn cancelBtn">Cancel</button></a>
      </div>
    </form>
  </div>
</main>

