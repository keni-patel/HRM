<%- include('partials/layout'); %>
<main class="container">
  <div class="main-tableContainer addForm-container">
    <h5 class="table-heading">Add Employee</h5>
    <form
      class="addForm"
      action="/AddEmployee"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-row">
        <div class="input-wrapper">
          <label for="">Employee Name:</label>
          <input type="text" placeholder="FirstName" name="firstname" />
          <input type="text" placeholder="MiddleName" name="middlename" />
          <input type="text" placeholder="LastName" name="lastname" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="email">Email:</label>
          <input type="email" name="email" id="" />
        </div>
        <div class="input-wrapper">
          <label for="age">Age:</label>
          <input type="number" name="age" id="" />
        </div>
        <div class="input-wrapper">
          <label for="dob">DOB:</label>
          <input type="date" name="dob" id="" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="design">Designation:</label>
          <input type="text" name="designation" />
        </div>
        <div class="input-wrapper">
          <label for="gender">Gender:</label>
          <div class="radio-grp">
            <input type="radio" name="gender" id="male" value="male" />
            <label for="">Male</label>
          </div>
          <div class="radio-grp">
            <input type="radio" name="gender" id="female" value="female" />
            <label for="">Female</label>
          </div>
        </div>
        <div class="input-wrapper">
          <label for="contact">Mobile No.:</label>
          <input type="number" name="mobile" id="" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="address">Address:</label>
          <input type="text" name="address" id="" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="joindate">Joining Date:</label>
          <input type="date" name="joining_date" id="" />
        </div>
        <div class="input-wrapper">
          <label for="education">Education(Highest Qualification):</label>
          <input type=" text" name="education" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="bloodgrp">Blood Group:</label>
          <input type="text" name="bloodgroup" value="" />
        </div>
        <div class="input-wrapper">
          <label for="experience">Experience:</label>
          <input type="text" name="experience" value="" />
        </div>
        <div class="input-wrapper">
          <label for="aadharNo">Adhaar No.:</label>
          <input type="number" name="aadhar_no" value="" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="health_complication">Health Complications(if any):</label>
          <input type="text" name="health_complication" id="" />
        </div>
        <div class="input-wrapper">
          <label for="department">Department:</label>
          <select name="dept_id">
            <% depts.forEach(dept => { %>
            <option value="<%= dept.id %>"><%= dept.deptname%></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="family">Family Member:</label>
          <input type="text" name="family_member" id="" placeholder="Name" />
          <input type="text" name="profession" id="" placeholder="Profession" />
          <input type="text" name="relation" id="" placeholder="Relation" />
        </div>
      </div>
      <div class="form-row">
        <div class="input-wrapper">
          <label for="profilephoto">Profile Photo:</label>
          <input type="file" name="profilephoto" id="" />
        </div>
      </div>
      <div class="btn-row">
        <button type="submit" class="form-btn submitBtn">Submit</button>
        <a href="/AllEmployee"
          ><button type="button" class="form-btn cancelBtn">Cancel</button></a
        >
      </div>
    </form>
  </div>
</main>

